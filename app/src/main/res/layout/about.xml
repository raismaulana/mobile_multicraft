<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/multicraft" />


        <TextView

            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="30dp"
            android:textColor="#0099e6"
            android:text="Multicraft Bussiness adalah home industry yang bergerak dibidang kerajinan di salah satu daerah di Kabupaten Jember, tepatnya berada di Kecamatan Puger. Home Industry ini sebagian besar memproduksi kerajinan dengan bahan dasar kayu, namun terkadang juga menggunakan tulang untuk dijadikan kerajinan."
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/btnfacebook"
            android:layout_marginLeft="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/facebook" />

        <ImageButton
            android:id="@+id/btnwhatsapp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/whatsapp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <ImageButton
            android:id="@+id/btninstagram"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:background="@drawable/instagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <ImageButton
            android:id="@+id/btngoogle"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:background="@drawable/google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />



    </LinearLayout>

</RelativeLayout>