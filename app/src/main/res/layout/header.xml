<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_header_selector">

    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            app:srcCompat="@drawable/ic_account_circle_white_24dp"
            android:id="@+id/avatar"
            android:layout_margin="1dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:ignore="VectorDrawableCompat" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="MULTICRAFT BUSSINESS"
            android:textColor="#fdf7a0"/>


    </LinearLayout>


    <TextView
        android:id="@+id/tview"
        android:paddingLeft="10dp"
        android:layout_gravity="left|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multicraft user"
        android:textColor="#ff7801"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <TextView
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="left|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multicraftbussiness@gmail.com"
        android:textColor="#fdecec"/>
</LinearLayout>